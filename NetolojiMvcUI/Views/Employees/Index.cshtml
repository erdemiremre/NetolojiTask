                            <th>Personel Soyadı</th>
                            <th>Görevi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                @*<td>@item.CategoryId</td>*@
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Title</td>
                                <td>

                                    @*<button class="btn  btn-warning" id="@item.CategoryId" onclick="UpdateCategory(@item.CategoryId)">Güncelle</button>*@
